<%- include('layout', { title: title, user: user, body: `
<div class="row">
    <div class="col-12">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2>
                <i class="fas fa-tachometer-alt"></i> Dashboard Administrativo
            </h2>
            <div class="text-muted">
                <i class="fas fa-user-shield"></i> <%= user.nombre %>
            </div>
        </div>
    </div>
</div>

<!-- Estadísticas -->
<div class="row mb-4">
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card stats-card h-100">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                            Total Usuarios
                        </div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">
                            <%= stats.totalUsers %>
                        </div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-users fa-2x text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card stats-card h-100">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                            Total Espacios
                        </div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">
                            <%= stats.totalSpaces %>
                        </div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-building fa-2x text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card stats-card h-100">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                            Total Reservas
                        </div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">
                            <%= stats.totalBookings %>
                        </div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-calendar-check fa-2x text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card stats-card h-100">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
                            Incidencias Activas
                        </div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">
                            <%= stats.totalIncidents %>
                        </div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-exclamation-triangle fa-2x text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <!-- Reservas Recientes -->
    <div class="col-lg-8">
        <div class="card mb-4">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h6 class="m-0 font-weight-bold text-primary">
                    <i class="fas fa-calendar-check"></i> Reservas Recientes
                </h6>
                <a href="/reservas" class="btn btn-primary btn-sm">
                    <i class="fas fa-eye"></i> Ver Todas
                </a>
            </div>
            <div class="card-body">
                <% if (typeof recentBookings !== 'undefined' && recentBookings.length > 0) { %>
                    <div class="table-responsive">
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th>Usuario</th>
                                    <th>Espacio</th>
                                    <th>Fecha</th>
                                    <th>Estado</th>
                                    <th>Acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% recentBookings.forEach(function(booking) { %>
                                    <tr>
                                        <td><%= booking.usuario_nombre %></td>
                                        <td><%= booking.espacio_nombre %></td>
                                        <td><%= new Date(booking.fecha_inicio).toLocaleDateString('es-CL') %></td>
                                        <td>
                                            <% 
                                                const statusClasses = {
                                                    'pendiente': 'warning',
                                                    'aprobada': 'success',
                                                    'rechazada': 'danger',
                                                    'cancelada': 'secondary'
                                                };
                                            %>
                                            <span class="badge bg-<%= statusClasses[booking.estado] || 'secondary' %>">
                                                <%= booking.estado.charAt(0).toUpperCase() + booking.estado.slice(1) %>
                                            </span>
                                        </td>
                                        <td>
                                            <% if (booking.estado === 'pendiente') { %>
                                                <form method="POST" action="/reservas/aprobar" style="display: inline;">
                                                    <input type="hidden" name="booking_id" value="<%= booking.id %>">
                                                    <input type="hidden" name="estado" value="aprobada">
                                                    <button type="submit" class="btn btn-success btn-sm">
                                                        <i class="fas fa-check"></i>
                                                    </button>
                                                </form>
                                                <form method="POST" action="/reservas/aprobar" style="display: inline;">
                                                    <input type="hidden" name="booking_id" value="<%= booking.id %>">
                                                    <input type="hidden" name="estado" value="rechazada">
                                                    <button type="submit" class="btn btn-danger btn-sm">
                                                        <i class="fas fa-times"></i>
                                                    </button>
                                                </form>
                                            <% } %>
                                        </td>
                                    </tr>
                                <% }); %>
                            </tbody>
                        </table>
                    </div>
                <% } else { %>
                    <p class="text-muted">No hay reservas recientes</p>
                <% } %>
            </div>
        </div>
    </div>

    <!-- Incidencias Recientes -->
    <div class="col-lg-4">
        <div class="card mb-4">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h6 class="m-0 font-weight-bold text-warning">
                    <i class="fas fa-exclamation-triangle"></i> Incidencias Recientes
                </h6>
                <a href="/incidencias" class="btn btn-warning btn-sm">
                    <i class="fas fa-eye"></i> Ver Todas
                </a>
            </div>
            <div class="card-body">
                <% if (typeof recentIncidents !== 'undefined' && recentIncidents.length > 0) { %>
                    <% recentIncidents.forEach(function(incident) { %>
                        <div class="mb-3 p-2 border rounded">
                            <div class="d-flex justify-content-between align-items-start">
                                <div>
                                    <h6 class="mb-1"><%= incident.espacio_nombre %></h6>
                                    <p class="mb-1 text-muted small"><%= incident.tipo_incidencia %></p>
                                    <p class="mb-1 small"><%= incident.descripcion.substring(0, 50) %>...</p>
                                </div>
                                <span class="badge bg-<%= incident.estado === 'abierta' ? 'danger' : 'warning' %>">
                                    <%= incident.estado %>
                                </span>
                            </div>
                        </div>
                    <% }); %>
                <% } else { %>
                    <p class="text-muted">No hay incidencias recientes</p>
                <% } %>
            </div>
        </div>

        <!-- Acciones Rápidas -->
        <div class="card">
            <div class="card-header">
                <h6 class="m-0 font-weight-bold text-primary">
                    <i class="fas fa-bolt"></i> Acciones Rápidas
                </h6>
            </div>
            <div class="card-body">
                <div class="d-grid gap-2">
                    <a href="/usuarios" class="btn btn-outline-primary btn-sm">
                        <i class="fas fa-users"></i> Gestionar Usuarios
                    </a>
                    <a href="/reservas" class="btn btn-outline-success btn-sm">
                        <i class="fas fa-calendar-check"></i> Revisar Reservas
                    </a>
                    <a href="/incidencias" class="btn btn-outline-warning btn-sm">
                        <i class="fas fa-exclamation-triangle"></i> Ver Incidencias
                    </a>
                    <a href="/configuracion" class="btn btn-outline-info btn-sm">
                        <i class="fas fa-cog"></i> Configuración
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
` }) %>




